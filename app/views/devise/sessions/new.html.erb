body {
  background-color: #f9f9f9;
}
.parent {
  width: 400px;
  height: 400px;
  margin-left: -200px;
  left: 50%;
  top: 70px;
  position: relative;
  background-color: #fff;
  padding-top: 1%;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.1);
}
.parent > h2 {
  color: #444;
  font-weight: 500;
  text-transform: uppercase;
  text-align: center;
  font-size: 26px;
  color: #e74c3c;
  letter-spacing: 1px;
  margin-bottom: 40px;
}
.parent > p {
  font-family: sans-serif;
  color: #666;
  text-align: center;
  margin-top: 25px;
}
  input[type=email], input[type=password]{
    border: none;
    border-bottom: 1px solid #ccc;
    width: 80%;
    height: 50px;
    font-size: 17px;
    letter-spacing: .5px;
    font-weight: 300;
    margin-left: -40%;
    left: 50%;
    position: relative;
    margin-bottom: 20px;
  }
  .submit {
    width: 80%;
    height: 50px;
    background-color: #e74c3c;
    border: none;
    left: 50%;
    margin-left:-40%;
    position: relative;
    color: white;
    cursor: pointer;
    font-family: 'Futura';
    text-transform: uppercase;
    font-size: 15px;
