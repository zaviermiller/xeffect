<div class="parent">
<h2>New Goal</h2>
<br>
<%= form_with(model: goal, local: true) do |form| %>
<div class="field">
  <%= form.text_field :habit, id: :goal_habit,placeholder: "Habit to break" %>
</div>

<div class="field">
  <%= form.text_field :why, id: :goal_why, placeholder: "Why do you want to break it?" %>
</div>

  <div class="actions">
    <%= form.submit "Create Goal",class: "submit" %>
  </div>
<% end %>
</div>
